@model List<StockGTO.Models.ArticlePost>

@{
    ViewData["Title"] = "我的文章列表";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 引用統一首頁樣式
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">🖋 我的發表文章</h2>

    @if (!Model.Any())
    {
        <p>你目前還沒有發表文章。</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>標題</th>
                    <th>分類</th>
                    <th>建立時間</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>@article.Category?.Name</td>
                        <td>@(article.CreatedAt.ToString("yyyy-MM-dd HH:mm") ?? "未知")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="ArticlePost" asp-action="Edit" asp-route-id="@article.Id">編輯</a>
                            <a class="btn btn-sm btn-danger" asp-controller="ArticlePost" asp-action="Delete" asp-route-id="@article.Id">刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

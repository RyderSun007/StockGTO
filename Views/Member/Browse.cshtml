@model List<StockGTO.Models.ArticlePost>
@{
    ViewData["Title"] = "文章瀏覽";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4">📰 所有公開文章</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">目前尚無任何文章可供瀏覽。</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text text-muted">
                                分類：@(post.Category?.Name ?? "未分類")<br />
                                建立時間：@post.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                            </p>
                            <a asp-controller="KnowledgeArticle" asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-primary btn-sm">閱讀更多</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

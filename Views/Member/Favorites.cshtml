@model List<StockGTO.Models.ArticlePost>
@{
    ViewData["Title"] = "我的收藏";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4">⭐ 我的收藏文章</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">你尚未收藏任何文章。</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text text-muted mb-2">
                                分類：@(post.Category?.Name ?? "未分類")<br />
                                建立時間：@post.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="/KnowledgeArticle/Details/@post.Id" style="color: #007bff; text-decoration: none;">查看文章</a>
                                <span class="text-danger" style="opacity: 0.6;">移除收藏（尚未實作）</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@model List<StockGTO.Models.DiyBooking>
@{
    Layout = null; // ❌ 不套用 Layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4 fw-bold">📋 後台 - DIY 預約紀錄</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>票種</th>
                <th>日期</th>
                <th>時段</th>
                <th>姓名</th>
                <th>電話</th>
                <th>公司名稱</th>
                <th>人數</th>
                <th>狀態</th>
                <th>備註</th>
                <th>建立時間</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.TicketType?.Name</td>
                    <td>@b.Date.ToString("yyyy-MM-dd")</td>
                    <td>@b.TimeSlot</td>
                    <td>@b.UserName</td>
                    <td>@b.UserPhone</td>
                    <td>@b.CompanyName</td>
                    <td>@b.BookedCount</td>
                    <td>@b.Status</td>
                    <td>@b.Note</td>
                    <td>@b.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

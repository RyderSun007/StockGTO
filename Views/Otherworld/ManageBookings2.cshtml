<style>
    body {
        font-family: "Microsoft JhengHei", sans-serif;
        background: #f4f6f9;
        padding: 30px;
    }

    h1, h2 {
        font-size: 22px;
        margin: 25px 0 15px;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 3px 8px rgba(0,0,0,0.08);
        margin-bottom: 25px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px 10px;
        font-size: 13px;
        text-align: center;
    }

    th {
        background: #2c3e50;
        color: white;
    }

    tr:nth-child(even) {
        background: #f9f9f9;
    }

    .badge {
        padding: 3px 8px;
        border-radius: 5px;
        font-size: 12px;
    }

    .badge-pending {
        background: #ffeeba;
        color: #856404;
    }

    .badge-confirm {
        background: #c3e6cb;
        color: #155724;
    }

    .badge-cancel {
        background: #f5c6cb;
        color: #721c24;
    }

    .highlight {
        background: #ffeeba;
        font-weight: bold;
    }
</style>


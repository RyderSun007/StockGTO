@model StockGTO.Models.IndexPost

@{
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 換成 AzNews 樣式
    ViewData["Title"] = "公告內容";
}

<main class="container pt-5">

    <h1 class="fw-bold mb-3">📢 @Model.Title</h1>

    <p class="text-muted">
        🗓️ @Model.CreatedAt.ToString("yyyy-MM-dd") ｜ 📂 @Model.Category ｜ ✍️ 作者：@Model.Author
    </p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="text-center my-4">
            <img src="@Model.ImageUrl" alt="封面圖" class="img-fluid rounded" style="max-height: 400px; object-fit: cover;" />
        </div>
    }

    <div class="mt-4">
        @Html.Raw(Model.Content)
    </div>

    <div class="mt-5">
        <a asp-action="ManageIndexPost" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> 返回公告列表
        </a>
    </div>

</main>

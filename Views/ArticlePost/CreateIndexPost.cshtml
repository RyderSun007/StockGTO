@model StockGTO.Models.IndexPost

@{
    ViewData["Title"] = "首頁公告發表區";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 改 AzNews 樣式
}

<main class="container pt-5">

    <!-- 📋 公告管理列表 -->
    <h2 class="fw-bold mb-4">📣 首頁公告列表</h2>

    <table class="table table-bordered text-center">
        <thead class="table-primary">
            <tr>
                <th>標題</th>
                <th>分類</th>
                <th>建立時間</th>
                <th style="width:180px;">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in ViewBag.IndexPosts as List<StockGTO.Models.IndexPost>)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.Category</td>
                    <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="EditIndexPost" asp-route-id="@post.Id" class="btn btn-warning btn-sm me-1">✏️ 編輯</a>
                        <a asp-action="DetailsIndexPost" asp-route-id="@post.Id" class="btn btn-info btn-sm me-1">👁️ 查看</a>
                        <a asp-action="DeleteIndexPost" asp-route-id="@post.Id" class="btn btn-danger btn-sm">🗑️ 刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 📝 新增公告表單 -->
    <h2 class="fw-bold mt-5 mb-4">📝 新增首頁公告</h2>

    <form asp-action="CreateIndexPost" method="post" class="border p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">標題</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">分類</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">內容</label>
            <textarea asp-for="Content" class="form-control" id="Content" rows="6"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">圖片網址</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label">作者</label>
            <input asp-for="Author" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">
            ✅ 發布公告
        </button>
    </form>

</main>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Content");
    </script>
}

@model StockGTO.Models.IndexPost

@{
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 套用 AzNews 樣式
    ViewData["Title"] = "刪除公告";
}

<main class="container pt-5">

    <h1 class="fw-bold text-danger mb-4">⚠️ 確定要刪除公告嗎？</h1>

    <div class="alert alert-warning">
        <h4 class="alert-heading">標題：@Model.Title</h4>
        <p class="mb-0">此操作無法還原，請小心！</p>
    </div>

    <form asp-action="DeleteIndexPostConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash"></i> 確認刪除
        </button>
        <a asp-action="ManageIndexPost" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> 取消返回
        </a>
    </form>

</main>

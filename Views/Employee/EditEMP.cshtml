@model StockGTO.Models.Employee

@{
    ViewData["Title"] = "編輯員工";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // 換新版 Layout！
}

<main class="container pt-5">

    <h2 class="fw-bold mb-4">✏️ 編輯員工資料</h2>

    <form asp-action="EditEMP" method="post" class="border p-4 bg-light rounded shadow-sm">

        <input type="hidden" asp-for="Id" />

        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" placeholder="姓名" />
            <label asp-for="Name">姓名</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Phone" class="form-control" placeholder="電話" />
            <label asp-for="Phone">電話</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <label asp-for="Email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Department" class="form-control" placeholder="部門" />
            <label asp-for="Department">部門</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="HireDate" class="form-control" type="date" />
            <label asp-for="HireDate">到職日</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Salary" class="form-control" placeholder="薪資" />
            <label asp-for="Salary">薪資</label>
        </div>

        <div class="form-check form-switch mb-4">
            <input type="hidden" asp-for="IsActive" value="false" />
            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActiveSwitch" />
            <label class="form-check-label" for="IsActiveSwitch">在職狀態</label>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> 儲存修改
            </button>
            <a asp-action="ShowEmployee" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> 返回清單
            </a>
        </div>

    </form>

</main>

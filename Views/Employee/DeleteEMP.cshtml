@model StockGTO.Models.Employee

@{
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 換成新版 Layout！
    ViewData["Title"] = "刪除員工確認";
}

<main class="container pt-5">

    <h2 class="fw-bold text-danger mb-4">⚠️ 確認刪除員工</h2>

    <div class="alert alert-warning shadow-sm">
        <h5 class="fw-bold">⚡ 小心！</h5>
        <p>你真的要刪除員工 <strong class="text-danger">@Model.Name</strong> 嗎？</p>
        <p>此動作<b>無法復原</b>，請慎重操作！</p>
    </div>

    <form asp-action="DeleteEMP" method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> 確認刪除
        </button>

        <a asp-action="ShowEmployee" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> 返回清單
        </a>
    </form>

</main>

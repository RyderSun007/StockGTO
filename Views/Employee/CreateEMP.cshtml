@model StockGTO.Models.Employee

@{
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // ✅ 換成新版 Layout！
    ViewData["Title"] = "新增員工";
}

<main class="container pt-5">

    <h2 class="fw-bold mb-4">➕ 新增員工資料</h2>

    <form asp-action="CreateEMP" method="post" class="bg-light p-4 rounded shadow-sm">

        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">姓名</label>
                <input asp-for="Name" class="form-control" placeholder="請輸入姓名" />
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label">電話</label>
                <input asp-for="Phone" class="form-control" placeholder="請輸入電話" />
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="請輸入Email" />
            </div>

            <div class="col-md-6">
                <label asp-for="Department" class="form-label">部門</label>
                <input asp-for="Department" class="form-control" placeholder="請輸入部門" />
            </div>

            <div class="col-md-6">
                <label asp-for="HireDate" class="form-label">到職日期</label>
                <input asp-for="HireDate" type="date" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Salary" class="form-label">薪資</label>
                <input asp-for="Salary" class="form-control" placeholder="請輸入薪資" />
            </div>

            <div class="col-md-6">
                <div class="form-check mt-4">
                    <input type="hidden" asp-for="IsActive" value="false" />
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                    <label asp-for="IsActive" class="form-check-label ms-2">在職狀態</label>
                </div>
            </div>

        </div>

        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2-circle"></i> 建立
            </button>
            <a asp-action="ShowEmployee" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> 返回清單
            </a>
        </div>

    </form>

</main>

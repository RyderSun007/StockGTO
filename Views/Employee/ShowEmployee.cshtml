@model IEnumerable<StockGTO.Models.Employee>

@{
    ViewData["Title"] = "員工清單";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml"; // 直接換成新 Layout！
}

<main class="container pt-5">

    <!-- 🔹 前台顯示員工總表 -->
    <h2 class="fw-bold mb-4">📋 員工總表（前台查看用）</h2>

    <div class="mb-3 text-muted">
        目前筆數：<strong class="text-primary">@Model.Count()</strong>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>姓名</th>
                    <th>電話</th>
                    <th>Email</th>
                    <th>部門</th>
                    <th>到職日</th>
                    <th>薪資</th>
                    <th>在職</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Name</td>
                        <td>@emp.Phone</td>
                        <td>@emp.Email</td>
                        <td>@emp.Department</td>
                        <td>@emp.HireDate.ToString("yyyy-MM-dd")</td>
                        <td>@emp.Salary.ToString("C0")</td>
                        <td>@(emp.IsActive ? "✔️" : "❌")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- 🔹 後台管理區塊 -->
    <h2 class="fw-bold mt-5 mb-4">🛠️ 員工資料管理（CRUD）</h2>

    <div class="mb-3">
        <a asp-action="CreateEMP" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> 新增員工
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>姓名</th>
                    <th>電話</th>
                    <th>Email</th>
                    <th>部門</th>
                    <th>到職日</th>
                    <th>薪資</th>
                    <th>在職</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Name</td>
                        <td>@emp.Phone</td>
                        <td>@emp.Email</td>
                        <td>@emp.Department</td>
                        <td>@emp.HireDate.ToString("yyyy-MM-dd")</td>
                        <td>@emp.Salary.ToString("C0")</td>
                        <td>@(emp.IsActive ? "✔️" : "❌")</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="EditEMP" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">
                                    ✏️ 編輯
                                </a>
                                <a asp-action="DeleteEMP" asp-route-id="@emp.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('確定要刪除嗎？')">
                                    🗑️ 刪除
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</main>

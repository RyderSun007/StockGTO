<script>
    fetch("/data/news_data.json")
        .then(res => res.json())
        .then(data => {
            const box = document.getElementById("hot-news-box");
            let html = "";
            const items = data.slice(0, 11); // 最多顯示11筆
            items.forEach(item => {
                const title = item.title.length > 40 ? item.title.slice(0, 40) + "..." : item.title;
                html += `
                    <a href="${item.link}" target="_blank" title="${item.title}">
                        🔸 ${title}
                    </a>`;
            });
            box.innerHTML = html;
        })
        .catch(err => console.error("❌ 載入 JSON 失敗：", err));
</script>

<style>
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr); /* 一週 7 天 */
        gap: 8px;
    }

    .calendar-cell {
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px;
        background: #f8f9fa;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
        min-height: 80px;
    }

        .calendar-cell:hover {
            background: #e9ecef;
        }

    .calendar-date {
        font-weight: bold;
    }

    .remain {
        font-size: 14px;
    }
</style>

<script>
    // 假資料：日期與剩餘票數
    var ticketCalendarData = {
        "2025-07-01": 10,
        "2025-07-02": 0,
        "2025-07-03": 5,
        "2025-07-05": 2,
        "2025-07-07": 8,
        "2025-07-10": 0
    };

    function renderCalendar() {
        const calendarEl = document.getElementById("ticketCalendar");
        const year = 2025, month = 6; // 7月 (JS 的月從0開始, 6代表7月)
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const firstDay = new Date(year, month, 1).getDay(); // 本月1號星期幾

        // 填充空白格（讓日曆對齊星期）
        for (let i = 0; i < firstDay; i++) {
            const emptyCell = document.createElement("div");
            emptyCell.className = "calendar-cell";
            calendarEl.appendChild(emptyCell);
        }

        // 繪製日曆格子
        for (let day = 1; day <= daysInMonth; day++) {
            const dateStr = `${year}-${(month + 1).toString().padStart(2, "0")}-${day.toString().padStart(2, "0")}`;
            const cell = document.createElement("div");
            cell.className = "calendar-cell";

            const remain = ticketCalendarData[dateStr] !== undefined
                ? ticketCalendarData[dateStr]
                : "-";

            cell.innerHTML = `
                <div class="calendar-date">${day}</div>
                <div class="remain ${remain === 0 ? 'text-danger' : 'text-success'}">
                    ${remain === "-" ? "無" : remain === 0 ? "已滿" : `剩 ${remain} 名`}
                </div>
            `;

            cell.onclick = () => {
                if (remain > 0) {
                    alert(`${dateStr} 預約成功！剩 ${remain - 1} 名`);
                    ticketCalendarData[dateStr] = remain - 1;
                    cell.querySelector(".remain").textContent = remain - 1 > 0 ? `剩 ${remain - 1} 名` : "已滿";
                    cell.querySelector(".remain").className = "remain " + (remain - 1 === 0 ? "text-danger" : "text-success");
                } else {
                    alert(`${dateStr} 已滿或無票務資訊`);
                }
            };

            calendarEl.appendChild(cell);
        }
    }

    renderCalendar();
</script>








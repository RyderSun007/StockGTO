<script>
    // 假資料：不同日期的剩餘名額
    var ticketData = {
        '2025-07-25': { '成人票': 5, '兒童票': 0, 'VIP 套票': 7 },
        '2025-07-26': { '成人票': 10, '兒童票': 3, 'VIP 套票': 0 },
        '2025-07-27': { '成人票': 8, '兒童票': 5, 'VIP 套票': 2 }
    };

    // 更新剩餘名額
    function updateRemaining() {
        var date = document.getElementById("selectedDate").value;
        var type = document.getElementById("ticketType").value;
        var remaining = (ticketData[date] && ticketData[date][type] !== undefined)
            ? ticketData[date][type]
            : 0;
        document.getElementById("remaining").textContent = remaining;
    }

    document.getElementById("selectedDate").addEventListener("change", updateRemaining);
    document.getElementById("ticketType").addEventListener("change", updateRemaining);

    // 預約邏輯
    document.getElementById("bookBtn").addEventListener("click", function () {
        var date = document.getElementById("selectedDate").value;
        var type = document.getElementById("ticketType").value;

        if (!ticketData[date]) {
            alert("此日期無票務資訊！");
            return;
        }
        if (ticketData[date][type] > 0) {
            ticketData[date][type]--;
            alert(`預約成功！${date} 的 ${type} 剩餘 ${ticketData[date][type]} 名`);
            updateRemaining();
        } else {
            alert(`${type} 已滿，無法預約`);
        }
    });
</script>

@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "首頁";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <!-- ✅ 首頁專用 CSS -->
    <link rel="stylesheet" href="~/css/homepage.css" />
}

<img src="/favicon.ico" alt="測試圖" style="width:100px;">

<!-- ✅ 首頁主圖新聞區塊：包含輪播 + 小圖 + 快訊清單 -->
<section class="container py-4">
    <div class="home-news-grid">

        <!-- 🔥 主新聞大圖輪播區塊 -->
        <div class="news-card large carousel slide news-main" id="mainNewsCarousel" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/news1.jpg" alt="台積電突破季線！">
                    <div class="overlay">
                        <h2>台積電突破季線！</h2>
                        <p>市場樂觀看待 AI 概念股後勢</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/news2.jpg" alt="蘋果財報優於預期">
                    <div class="overlay">
                        <h2>蘋果財報優於預期</h2>
                        <p>推升美股科技股全面走強</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/news3.jpg" alt="通膨壓力舒緩">
                    <div class="overlay">
                        <h2>通膨壓力舒緩</h2>
                        <p>聯準會暫緩升息、債券市場反彈</p>
                    </div>
                </div>
            </div>
            <!-- 輪播左右控制按鈕 -->
            <button class="carousel-control-prev" type="button" data-bs-target="#mainNewsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainNewsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>

        <!-- 🖼️ 小圖新聞一 -->
        <div class="news-card small news-sub">
            <img src="/images/news4.jpg" alt="富邦金單日漲幅達 5%">
            <div class="overlay">
                <h4>富邦金單日漲幅達 5%</h4>
            </div>
        </div>

        <!-- 🖼️ 小圖新聞二 -->
        <div class="news-card small news-sub">
            <img src="/images/news5.jpg" alt="AI 再起">
            <div class="overlay">
                <h4>輝達領軍台股攻高</h4>
            </div>
        </div>

        <!-- 📰 即時新聞欄位 -->
        <div class="news-list">
            <h6 class="text-warning fw-bold mb-3">即時新聞</h6>
            <ul class="realtime-news">
                <li><strong>鴻海法說會登場</strong> <span>郭董將親自說明未來布局</span></li>
                <li><strong>AI 股續強</strong> <span>輝達再創歷史新高</span></li>
                <li><strong>0050 配息出爐</strong> <span>殖利率逾 5%</span></li>
                <li><strong>Google 宣布併購</strong> <span>市場熱議反壟斷問題</span></li>
                <li><strong>台股午盤翻紅</strong> <span>電子權值撐盤</span></li>
                <li><strong>美債殖利率回落</strong> <span>資金重返股市</span></li>
            </ul>
        </div>

    </div>
</section></section>


























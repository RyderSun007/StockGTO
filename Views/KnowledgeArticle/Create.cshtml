@model StockGTO.Models.ArticlePost

@{
    ViewData["Title"] = "新增股票知識文章";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml";
}

<main class="container pt-5">
    <h2 class="fw-bold mb-4">📝 新增股票知識文章</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="border p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">文章標題</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label">作者</label>
            <input asp-for="Author" class="form-control" value="StockGTO | 股市周刊" />
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">圖片網址（可選）</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="可不填，會使用預設圖片或上傳圖片" />
        </div>

        <div class="mb-3">
            <label class="form-label">或選擇上傳圖片</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div class="mb-3" style="max-width: 500px;">
            <label asp-for="Category" class="form-label">分類</label>
            <select asp-for="Category" class="form-select">
                <option value="">-- 請選擇分類 --</option>
                <option value="FinancialStatements">財報分析</option>
                <option value="TechnicalAnalysis">技術分析</option>
                <option value="FundamentalAnalysis">基本面研究</option>
                <option value="InvestmentStrategy">投資策略</option>
                <option value="WealthPlanning">理財規劃</option>
                <option value="IndustryInsight">產業分析</option>
                <option value="MarketTrends">趨勢觀察</option>
                <option value="GlobalMarkets">國際市場</option>
                <option value="GlobalInvesting">全球投資</option>
                <option value="InvestorPsychology">投資心理</option>
                <option value="BehavioralFinance">行為經濟學</option>
                <option value="FinancialProducts">金融商品</option>
                <option value="Derivatives">衍生性工具</option>
                <option value="股票知識">股票知識</option>
                <option value="ETF專區">ETF專區</option>
                <option value="技術分析">技術分析</option>
                <option value="總觀觀點">總觀觀點</option>
                <option value="基金專區">基金專區</option>
            </select>
        </div>
        <div class="w-100"></div>
        <div class="w-100"></div>
        <div class="mb-3" style="max-width: 800px;">
            <label asp-for="Content" class="form-label">文章內容</label>
            <textarea asp-for="Content" class="form-control" id="summernote" rows="8" style="max-width: 100%;" ></textarea>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsPinned" class="form-check-input" />
            <label asp-for="IsPinned" class="form-check-label">置頂顯示（首頁精選）</label>
        </div>

        <button type="submit" class="btn btn-success">✅ 發布文章</button>
    </form>

</main>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 300
            });
        });
    </script>
}

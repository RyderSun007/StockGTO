@model List<StockGTO.Models.ArticlePost>

@{
    ViewData["Title"] = "股票知識教學";
    Layout = "~/Views/Shared/_AzNewsLayout.cshtml";
}

<main class="container pt-5">
    <h2 class="fw-bold mb-4">📘 股票知識教學</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm d-flex flex-column" style="font-size: 0.9rem;">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                         style="height: 180px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" style="font-size: 1.1rem; font-weight: 600;">
                            @item.Title
                        </h5>
                        <p class="card-text text-truncate">
                            @Html.Raw(item.Content?.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                        </p>

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                🔍 閱讀
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                ✏️ 編輯
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('確定要刪除這篇文章嗎？')">
                                🗑️ 刪除
                            </a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        發佈時間：@item.CreatedAt.ToString("yyyy-MM-dd")
                    </div>
                </div>
            </div>
        }
    </div>
</main>

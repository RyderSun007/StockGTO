<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StockGTO</title>

    <!-- 📜 網頁 Manifest & ICON -->
    <link rel="manifest" href="@Url.Content("~/aznews/site.webmanifest")" />
    <link rel="shortcut icon" type="image/x-icon" href="~/aznews/assets/img/favicon.ico" asp-append-version="true" />

    <!-- 🎨 核心 CSS -->
    <link rel="stylesheet" href="~/aznews/assets/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/owl.carousel.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/ticker-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/flaticon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/slicknav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/animate.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/magnific-popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/fontawesome-all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/themify-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/slick.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/nice-select.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/style.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>

<body>

    <!-- 🧩 導覽列區塊 -->
    <header>
        <div class="header-area">
            <div class="main-header">
                <div class="header-bottom header-sticky">
                    <div class="container">

                        <div class="row align-items-center justify-content-between">
                                                      
                            <!-- 🔵 Logo -->
                            <div class="col-auto">
                                <div class="sticky-logo">
                                    <a asp-controller="Home" asp-action="Index">
                                        <img src="@Url.Content("~/aznews/assets/img/logo/logo.png")" alt="StockGTO" style="width:150px;" asp-append-version="true" />
                                    </a>
                                </div>
                            </div>

                            <!-- 🟠 導覽列 -->
                            <div class="col">
                                <div class="main-menu d-none d-md-block">
                                    <nav>
                                        <ul id="navigation" class="d-flex justify-content-end align-items-center">
                                            

                                            <li><a href="/viewer/news_viewer.html" target="_blank">Python新聞</a></li>
                                            <!-- 📘 股票知識模組（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="knowledgeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    股票知識模組
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="knowledgeDropdown">
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="Index"> 後台管理列表</a></li>
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="PublicList">前台文章清單</a></li>
                                                   
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="Create">建立新文章</a></li>
                                                    
                                                </ul>
                                            </li>
                                            

                                            <!-- 🗂 九宮格新聞（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="gridNewsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    九宮格新聞
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="gridNewsDropdown">
                                                    <li><a class="dropdown-item" asp-controller="IndexNews" asp-action="Index">新聞清單（Index）</a></li>
                                                    <li><a class="dropdown-item" asp-controller="IndexNews" asp-action="Manage">新聞管理（Manage）</a></li>
                                                </ul>
                                            </li>

                                            <!-- 🧾 新聞管理（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="newsManageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    新聞管理
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="newsManageDropdown">
                                                    <li><a class="dropdown-item" asp-controller="NewsArticle" asp-action="Create">新增新聞（Create）</a></li>
                                                    <li><a class="dropdown-item" asp-controller="NewsArticle" asp-action="Manage">管理新聞（Manage）</a></li>
                                                </ul>
                                            </li>

                                            <!-- 💬 討論區模組（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="postDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    💬 討論區模組
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="postDropdown">
                                                    <li><a class="dropdown-item" asp-controller="Post" asp-action="Post">📝 前台討論區</a></li>
                                                    <li><a class="dropdown-item" asp-controller="Post" asp-action="Manage">🛠️ 後台管理</a></li>
                                                </ul>
                                            </li>
                                            <!-- 📣 公告區模組（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="announcementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    📣 公告區模組
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="announcementDropdown">
                                                    <li><a class="dropdown-item" asp-controller="ArticlePost" asp-action="CreateIndexPost">📋 建立公告</a></li>
                                                    <li><a class="dropdown-item" asp-controller="ArticlePost" asp-action="ManageIndexPost">🔧 後台管理</a></li>
                                                </ul>
                                            </li>


                                            <!-- 🛠️ 自有程式（下拉選單） -->
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="selfProgramDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    自有程式CRUD
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="selfProgramDropdown">
                                                    <li><a class="dropdown-item" asp-controller="OldSunStock" asp-action="Index">📝老孫持股</a></li>
                                                 
                                                    <li><a class="dropdown-item" asp-controller="Employee" asp-action="List">👥 員工（簡易登入）</a></li>
                                                </ul>
                                            </li>

                                                                                       
                                            <!-- 🔹 搜尋按鈕 -->
                                            <li>
                                                <i class="fas fa-search special-tag"></i>
                                            </li>

                                        </ul>
                                    </nav>
                                </div>
                            </div>

                        </div> <!-- row -->
                    </div> <!-- container -->
                </div> <!-- header-bottom -->
            </div> <!-- main-header -->
        </div> <!-- header-area -->
    </header>

    <!-- 🔥 主內容 -->
    <main class="container pt-5" style="padding-top: 120px;">
        @RenderBody()
    </main>

    <!-- 🔻 頁尾區 -->
    <footer class="footer-area bg-dark text-light mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2025 股市方舟 StockGTO. All rights reserved.</p>
        </div>
    </footer>

    <!-- 📦 JavaScript 套件 -->
    <script src="~/aznews/assets/js/vendor/modernizr-3.5.0.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/vendor/jquery-1.12.4.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/popper.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script src="~/aznews/assets/js/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/slick.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.slicknav.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/wow.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.magnific-popup.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.nice-select.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.counterup.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/waypoints.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/main.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dropdowns = document.querySelectorAll(".dropdown");

        dropdowns.forEach(function (dropdown) {
            dropdown.addEventListener("mouseenter", function () {
                const toggle = dropdown.querySelector(".dropdown-toggle");
                const menu = dropdown.querySelector(".dropdown-menu");
                if (!menu.classList.contains("show")) {
                    new bootstrap.Dropdown(toggle).show();
                }
            });

            dropdown.addEventListener("mouseleave", function () {
                const toggle = dropdown.querySelector(".dropdown-toggle");
                const menu = dropdown.querySelector(".dropdown-menu");
                if (menu.classList.contains("show")) {
                    new bootstrap.Dropdown(toggle).hide();
                }
            });
        });
    });
</script>
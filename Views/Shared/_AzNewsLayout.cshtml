<!DOCTYPE html>
<html lang="zh-Hant">
@using Microsoft.AspNetCore.Identity
@using StockGTO.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StockGTO</title>

    <link rel="manifest" href="@Url.Content("~/aznews/site.webmanifest")" />
    <link rel="shortcut icon" type="image/x-icon" href="~/aznews/assets/img/favicon.ico" asp-append-version="true" />

    <link rel="stylesheet" href="~/aznews/assets/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/owl.carousel.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/ticker-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/flaticon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/slicknav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/animate.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/magnific-popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/fontawesome-all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/themify-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/slick.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/nice-select.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aznews/assets/css/style.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <div class="header-area">
            <div class="main-header">
                <div class="header-bottom header-sticky">
                    <div class="container">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto">
                                <div class="sticky-logo">
                                    <a asp-controller="Home" asp-action="Index">
                                        <img src="@Url.Content("~/aznews/assets/img/logo/logo.png")" alt="StockGTO" style="width:150px;" asp-append-version="true" />
                                    </a>
                                </div>
                            </div>
                            <div class="col">
                                <div class="main-menu d-none d-md-block">
                                    <nav>
                                        <ul id="navigation" class="d-flex justify-content-end align-items-center">

                                            @if (SignInManager.IsSignedIn(User))
                                            {
                                                var currentUser = await UserManager.GetUserAsync(User);
                                                <li>
                                                    <span class="nav-link">👋 歡迎，@currentUser.DisplayName</span>
                                                </li>
                                                <li>
                                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                                        <i class="fas fa-sign-out-alt text-danger"></i> 登出
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="nav-link" asp-controller="Member" asp-action="Profile">
                                                        👤 會員中心
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a class="nav-link" asp-controller="Account" asp-action="LoginWithGoogle">
                                                        <i class="fab fa-google text-danger"></i> Google 登入
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="nav-link" asp-controller="Account" asp-action="LoginWithFacebook">
                                                        <i class="fab fa-facebook text-primary"></i> Facebook 登入（未開發）
                                                    </a>
                                                </li>
                                            }

                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" href="#" id="selfProgramDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">自有程式</a>
                                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="selfProgramDropdown">
                                                    <li><a class="dropdown-item" asp-controller="IndexNews" asp-action="Index">📋 九格清單</a></li>
                                                    <li><a class="dropdown-item" asp-controller="IndexNews" asp-action="Manage">📋 九格管理</a></li>
                                                    <li><a class="dropdown-item" asp-controller="Post" asp-action="Manage">📝 筆記後台</a></li>
                                                    <li><a class="dropdown-item" asp-controller="Post" asp-action="Post">📝 筆記前台</a></li>
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="Index">🌐 新聞後台</a></li>
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="PublicList">🌐 新聞前台</a></li>
                                                    <li><a class="dropdown-item" asp-controller="KnowledgeArticle" asp-action="Create">🌐 建立文章</a></li>
                                                    <li><a class="dropdown-item" asp-controller="NewsArticle" asp-action="Create">🧪News建置(未開發)</a></li>
                                                    <li><a class="dropdown-item" asp-controller="NewsArticle" asp-action="Manage">🧪News管理(未開發)</a></li>
                                                </ul>
                                            </li>

                                        </ul>
                                    </nav>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container pt-5" style="padding-top: 120px;">
        @RenderBody()
    </main>

    <footer class="footer-area bg-dark text-light mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2025         StockGTO | 股市周刊  . All rights reserved.</p>
        </div>
    </footer>

    <script src="~/aznews/assets/js/vendor/modernizr-3.5.0.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/vendor/jquery-1.12.4.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/popper.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/aznews/assets/js/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/slick.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.slicknav.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/wow.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.magnific-popup.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.nice-select.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/jquery.counterup.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/waypoints.min.js" asp-append-version="true"></script>
    <script src="~/aznews/assets/js/main.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dropdowns = document.querySelectorAll(".dropdown");

        dropdowns.forEach(function (dropdown) {
            dropdown.addEventListener("mouseenter", function () {
                const toggle = dropdown.querySelector(".dropdown-toggle");
                const menu = dropdown.querySelector(".dropdown-menu");
                if (!menu.classList.contains("show")) {
                    new bootstrap.Dropdown(toggle).show();
                }
            });

            dropdown.addEventListener("mouseleave", function () {
                const toggle = dropdown.querySelector(".dropdown-toggle");
                const menu = dropdown.querySelector(".dropdown-menu");
                if (menu.classList.contains("show")) {
                    new bootstrap.Dropdown(toggle).hide();
                }
            });
        });
    });
</script>